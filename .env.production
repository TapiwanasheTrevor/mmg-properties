# Production Environment Variables for MMG Properties Platform
# Deploy to Vercel with these environment variables

# Application
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_URL=https://mmgproperties.africa
NEXT_PUBLIC_APP_NAME="MMG Properties"

# Firebase Configuration (Production)
# Get these from Firebase Console > Project Settings > Web App
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=mmg-platform.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=mmg-platform
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=mmg-platform.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin SDK (Server-side)
FIREBASE_ADMIN_PRIVATE_KEY=
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xyz@mmg-platform.iam.gserviceaccount.com
FIREBASE_ADMIN_PROJECT_ID=mmg-platform

# Security
NEXTAUTH_SECRET=
NEXTAUTH_URL=https://mmgproperties.africa

# Email Configuration (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@mmgproperties.africa

# SMS Configuration (Zimbabwe)
# For Econet, NetOne, Telecel SMS integration
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER_ID=MMGProp

# Payment Gateway (Optional)
# For rent payments integration
PAYGATE_ID=
PAYGATE_SECRET=

# Monitoring & Analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_GPS_TRACKING=true
NEXT_PUBLIC_ENABLE_CAMERA_UPLOAD=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# Zimbabwe Specific
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,ZWL
DEFAULT_TIMEZONE=Africa/Harare
DEFAULT_LANGUAGE=en-ZW

# Cache Configuration
REDIS_URL=
CACHE_TTL=3600